#page-box {
  width: 100%;
  height: 100%;  
  display: flex;
  justify-content: center;
  align-items: center;
}
@keyframes play-animator-1{
  from{
    transform: rotate(0deg);
  }to{
    transform: rotate(360deg);
  }
}
#page-box view {
  width: 200px;
  height: 200px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50px;
  box-shadow: 0px 0px 35px 5px #b9b8b8;
  border: 10px solid #ffffff;
  border-radius: 50%;
  animation: 15s play-animator-1 infinite linear;
}
#page-box view image {
  border-radius: 50%;
  border: none;
  width: 100%;
  height: 100%;
}
#page-box text {
  position: absolute;
  top: 300px;
  color: #141414;
}